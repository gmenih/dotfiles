#!/usr/bin/env bash

brew update

brew upgrade

brew tap koekeishiya/formulae
brew tap homebrew/cask-fonts

{{ $brews := list 
    "coreutils"
    "findutils"
    "grep"
    "gnu-tar"
    "gnupg"
    "openssh"
    "screen"
    "neovim"
    "bat"
    "prettyping"
    "btop"
    "tldr"
    "docker"
    "docker-compose"
    "go"
    "yq"
    "jq"
    "koekeishiya/formulae/yabai"
    "koekeishiya/formulae/skhd"
}}

{{ $casks := list 
    "1password"
    "firefox"
    "flux"
    "font-fira-code"
    "google-chrome"
    "arc"
    "iterm2"
    "slack"
    "spotify"
    "tunnelblick"
    "visual-studio-code"
    "cursor"
    "vlc"
    "tailscale"
    "raycast"
    "obsidian"
    "karabiner-elements"
}}
    
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}

{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF

brew cleanup
